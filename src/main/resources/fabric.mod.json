{
  "schemaVersion": 1,
  "id": "magick",
  "version": "${version}",

  "name": "Magick: Potions and Pearls",
  "description": "Adds 22 new base potions, making potions for most vanilla status effects as well as 12 new status effects. Also adds 10 new Pearl items similar to ender-pearls but with varying effects",
  "authors": [
    "Arcanist"
  ],
  "contact": {
    "homepage": "https://github.com/Magick-Arcanist/Magick",
    "sources": "https://github.com/Magick-Arcanist/Magick"
  },

  "license": "CC0-1.0",
  "icon": "assets/magick/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.arcanist.magick.Magick"
    ],
    "client": [
      "com.arcanist.magick.MagickClient"
    ]
  },
  "mixins": [
    "magick.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "origins": "*"
  }
}
